<%- include('./includes/header') %>



        <!-- Content -->
        <div class="content">
            <!-- Animated -->
            <div class="animated fadeIn">
                   <!-- store -->
                   <div class="content">
                    <div class="animated fadeIn">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="card">
                                    <div class="card-header">
                                        <strong class="card-title">Create Server</strong>
                                    </div>
                                    <div class="card-body">
                                        <!-- Create Server -->
                                        <div id="pay-invoice">
                                            <div class="card-body">
                                                <div class="card-title">
                                                    <h3 class="text-center">Enter Server Details</h3>
                                                </div>
                                                <hr>
                                                
                                                <div class="row form-group">
                                                    <div class="col col-md-3"><label for="selectSm" class=" form-control-label">Select Location</label></div>
                                                    <div class="col-12 col-md-9">
                                                        <select name="selectSm" id="selectSm" class="form-control-sm form-control">
                                                            <option value="0">Please select</option>
                                                            <option value="1">Option #1</option>
                                                        </select>
                                                    </div>
                                                </div>
                           <div class="has-success form-group">
                            <label  class=" form-control-label">Cpu</label>
                            <input type="text" placeholder="CPU IN MIB" class="is-valid form-control-success form-control">
                        </div>
                        <div class="has-success form-group">
                            <label  class=" form-control-label">Disk</label>
                            <input type="text" placeholder="DISK IN MIB"  class="is-valid form-control-success form-control">
                        </div>
                        <div class="has-success form-group">
                            <label  class=" form-control-label">Ram</label>
                            <input type="text" placeholder="RAM IN MIB" class="is-valid form-control-success form-control">
                        </div>
                        <div class="has-success form-group">
                            <label  class=" form-control-label">DataBase</label>
                            <input type="text" placeholder="NUMBER OF DATABASE" class="is-valid form-control-success form-control">
                        </div>
                        <div class="has-success form-group">
                            <label  class=" form-control-label">Backups</label>
                            <input type="text" placeholder="NUMBER OF BACKUPS" class="is-valid form-control-success form-control">
                        </div>
                        <div class="has-success form-group">
                            <label  class=" form-control-label">Port</label>
                            <input type="text" placeholder="NUMBER OF PORTS" class="is-valid form-control-success form-control">
                        </div>
                        <button type="button" class="btn btn-danger">
                            <i class="fa-solid fa-plus"></i>&nbsp; Create
                        </button>


                                            </div>
                                        </div>
        
                                    </div>
                                </div> <!-- .card -->
        
                            </div><!--/.col-->
                            </div>
                            </div>
                            </div>
                  </div>
                <div class="row">
                <!-- Status -->
                          <!-- Status -->
                          <div class="content">
                            <div class="animated fadeIn">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="card">
                                            <div class="card-header">
                                                <strong class="card-title">Basic Table</strong>
                                            </div>
                                            <div class="card-body">
                                                <table class="table">
                                                    <thead>
                                                        <tr>
                                                          <th scope="col">Name</th>
                                                          <th scope="col">Cpu</th>
                                                          <th scope="col">Ram</th>
                                                          <th scope="col">Disk</th>
                                                          <th scope="col">manage</th>
                                                      </tr>
                                                  </thead>
                                                  <tbody>
                                          <% userServers.forEach(server => { %>
                                                    <tr>
                                                        <th scope="row"><%= server.name %></th>
                                                        <td><%= server.cpu %></td>
                                                        <td><%= server.ram %></td>
                                                        <td><%= server.disk %></td>
        
        <td><button onclick="window.location.href='./manage?id=<%= server.identifier %>'" type="button" class="btn btn-success btn-sm"><i class="fa-solid fa-gears"></i>&nbsp; manage</button>
            <% if (settings.store.renewals.status == true) { %>
            <button onclick="window.location.href='./renew?id=<%= server.id %>'" type="button" class="btn btn-success btn-sm"><i class="fa-solid fa-gears"></i>&nbsp; Renew</button>
                  <% } %>
        
                                                        </td>
                                                    </tr>
                                                    <% }); %>
                                                </tbody>
                                                
                                            </table>
                                        </div>
                                    </div>
                                </div>
                        </div>
                        <!-- Status -->
           <!-- .row -->
            </div>
            <!-- .animated -->
        </div>
        <!-- /.content -->
        <div class="clearfix"></div>
        <!-- Footer -->
        <footer class="site-footer">
            <div class="footer-inner bg-white">
                <div class="row">
                    <div class="col-sm-6">
                        Copyright &copy; 2024 <%= AppName %>
                    </div>
                    <div class="col-sm-6 text-right">
                        Designed by <a href="https://github.io/AlphaCtyl">Abhiram</a>
                    </div>
                </div>
            </div>
        </footer>
        <!-- /.site-footer -->
    </div>
    <!-- /#right-panel -->

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@2.2.4/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.4/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-match-height@0.7.2/dist/jquery.matchHeight.min.js"></script>
    <script src="assets/js/main.js"></script>
    <!--  Chart js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.7.3/dist/Chart.bundle.min.js"></script>
    <!--Flot Chart-->
    <script src="https://cdn.jsdelivr.net/npm/jquery.flot@0.8.3/jquery.flot.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/flot-spline@0.0.1/js/jquery.flot.spline.min.js"></script>
    <!-- local -->
    <script src="assets/js/widgets.js"></script>
</body>
</html>
