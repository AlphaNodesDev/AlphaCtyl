<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin</title>
  <link rel="stylesheet" href="css/style.css">
  <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/line-awesome/1.3.0/line-awesome/css/line-awesome.min.css'>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <script src="https://kit.fontawesome.com/062f52da9a.js" crossorigin="anonymous"></script>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
  <%- include('./includes/admin-sidebar') %>

<div class="main-content">
  <%- include('./includes/admin-header') %>

  <main>
    <section>
      <div class="cards-container">
        <style>
          input[type="text"] {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            box-sizing: border-box;
            border: 2px solid #ccc;
            border-radius: 4px;
            background-color: #f8f8f8;
            font-size: 16px;
            transition: border-color 0.3s ease-in-out;
            display: block;
          }

          input[type="text"]:focus {
            border-color: #4CAF50;
            outline: none;
          }
        </style>
        
        <!-- Add Extra Coins -->
        <form action="/addresources" method="POST" class="card">
          <input type="hidden" name="resourceType" value="coins">
          <div class="card-title">Add Extra Coins</div>
          <div class="card-body">
            <input type="text" placeholder="username" name="username"> 
            <input type="text" placeholder="Enter coins" name="amount">
          </div>
          <button type="submit" class="btn-submit">Submit</button>
        </form>
        
        <!-- Add Extra CPU -->
        <form action="/addresources" method="POST" class="card">
          <input type="hidden" name="resourceType" value="cpu">
          <div class="card-title">Add Extra CPU</div>
          <div class="card-body">
            <input type="text" placeholder="username" name="username"> 
            <input type="text" placeholder="Enter amount" name="amount">
          </div>
          <button type="submit" class="btn-submit">Submit</button>
        </form>
        
        <!-- Add Extra RAM -->
        <form action="/addresources" method="POST" class="card">
          <input type="hidden" name="resourceType" value="ram">
          <div class="card-title">Add Extra RAM</div>
          <div class="card-body">
            <input type="text" placeholder="username" name="username"> 
            <input type="text" placeholder="Enter amount" name="amount">
          </div>
          <button type="submit" class="btn-submit">Submit</button>
        </form>
        
        <!-- Add Extra Disk -->
        <form action="/addresources" method="POST" class="card">
          <input type="hidden" name="resourceType" value="disk">
          <div class="card-title">Add Extra Disk</div>
          <div class="card-body">
            <input type="text" placeholder="username" name="username"> 
            <input type="text" placeholder="Enter amount" name="amount">
          </div>
          <button type="submit" class="btn-submit">Submit</button>
        </form>
        
        <!-- Add Extra Servers -->
        <form action="/addresources" method="POST" class="card">
          <input type="hidden" name="resourceType" value="servers">
          <div class="card-title">Add Extra Servers</div>
          <div class="card-body">
            <input type="text" placeholder="username" name="username"> 
            <input type="text" placeholder="Enter amount" name="amount">
          </div>
          <button type="submit" class="btn-submit">Submit</button>
        </form>
        
        <!-- Add Extra Port -->
        <form action="/addresources" method="POST" class="card">
          <input type="hidden" name="resourceType" value="ports">
          <div class="card-title">Add Extra Port</div>
          <div class="card-body">
            <input type="text" placeholder="username" name="username"> 
            <input type="text" placeholder="Enter amount" name="amount">
          </div>
          <button type="submit" class="btn-submit">Submit</button>
        </form>
        
        <!-- Add Extra Database -->
        <form action="/addresources" method="POST" class="card">
          <input type="hidden" name="resourceType" value="database">
          <div class="card-title">Add Extra Database</div>
          <div class="card-body">
            <input type="text" placeholder="username" name="username"> 
            <input type="text" placeholder="Enter amount" name="amount">
          </div>
          <button type="submit" class="btn-submit">Submit</button>
        </form>
        
        <!-- Add Extra Backup -->
        <form action="/addresources" method="POST" class="card">
          <input type="hidden" name="resourceType" value="backup">
          <div class="card-title">Add Extra Backup</div>
          <div class="card-body">
            <input type="text" placeholder="username" name="username"> 
            <input type="text" placeholder="Enter amount" name="amount">
          </div>
          <button type="submit" class="btn-submit">Submit</button>
        </form>                                                               
      </div>
    </section>
  </main>

  <%- include('./includes/admin-footer') %>
</main>
</body>
</html>
