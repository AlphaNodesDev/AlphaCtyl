
<!DOCTYPE html>
<html lang="en" >
<head>
  <meta charset="UTF-8">
  <title>Create Server</title>
  <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/line-awesome/1.3.0/line-awesome/css/line-awesome.min.css'><link rel="stylesheet" href="./style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <link rel="stylesheet" href="css/style.css">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <script src="https://kit.fontawesome.com/062f52da9a.js" crossorigin="anonymous"></script>
</head>
<body>
  <%- include('./includes/sidebar') %>

<div class="main-content">

  <%- include('./includes/header') %>

  <main>
    <section class="container">
      <form action="/createserver" method="POST" class="form">
        <div class="form-group">
          <label for="locations">Select Location:</label>
          <select name="locations" id="locations" class="form-control">
            <% Object.keys(settings.locations).forEach(locationKey => { %>
            <option value="<%= locationKey %>"><%= settings.locations[locationKey].name %></option>
            <% }); %>
          </select>
        </div>
        <div class="form-group">
          <label for="egg">Select Egg:</label>
          <select name="egg" id="egg" class="form-control">
            <% Object.keys(settings.eggs).forEach(eggKey => { %>
            <option value="<%= eggKey %>"><%= settings.eggs[eggKey].display %></option>
            <% }); %>
          </select>
        </div>
        <div class="form-group egg-fields">
          <label for="name">Server Name:</label>
          <input type="text" name="name" id="name" class="form-control" placeholder="Name">
          <label for="cpu">Server CPU:</label>
          <input type="number" name="cpu" id="cpu" class="form-control" placeholder="CPU">
          <label for="ram">Server RAM:</label>
          <input type="number" name="ram" id="ram" class="form-control" placeholder="RAM">
          <label for="disk">Server Disk:</label>
          <input type="number" name="disk" id="disk" class="form-control" placeholder="Disk">
          <label for="port">Server Port:</label>
          <input type="number" name="port" id="port" class="form-control" placeholder="Port">
        </div>
        <div class="form-group text-center">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
    </section>
    
    

</div>
<!-- partial -->
</main>
<%- include('./includes/footer') %>

</body>
</html>
