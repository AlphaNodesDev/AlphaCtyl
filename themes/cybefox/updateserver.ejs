<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Server</title>
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&family=Rajdhani:wght@400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css">
    <script src="https://kit.fontawesome.com/062f52da9a.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="assets/css/cybefox.css">
</head>
<body>
<%- include('./includes/header') %>
<div class="content">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-header"><i class="fa fa-sync text-cyan"></i><strong>Update Server</strong></div>
                    <div class="card-body">
                        <form method="post" action="/updateserver">
                            <input type="hidden" id="serverId" name="serverId">
                            <div class="form-group"><label><i class="fa fa-microchip text-cyan"></i> CPU (%)</label><input type="text" name="cpu" placeholder="CPU in %" class="form-control"></div>
                            <div class="form-group"><label><i class="fa fa-memory text-magenta"></i> RAM (MB)</label><input type="text" name="ram" placeholder="RAM in MB" class="form-control"></div>
                            <div class="form-group"><label><i class="fa fa-hdd text-yellow"></i> Disk (MB)</label><input type="text" name="disk" placeholder="Disk in MB" class="form-control"></div>
                            <button type="submit" class="btn btn-primary btn-block"><i class="fa fa-sync"></i> Update Server</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    const urlParams = new URLSearchParams(window.location.search);
    document.getElementById('serverId').value = urlParams.get('id') || '';
</script>
<%- include('./includes/footer') %>
